<h1>Edit author</h1>

<% form_for(@author) do |f| %>
  <%= f.error_messages %>
  <div id="author_password_div">
    <label for="author_password">Password</label>
    <%= f.text_field :password %>
  </div>
  <div id="author_display_name_div">
    <label for="author_display_name">Display Name</label>
    <%= f.text_field :display_name %>
  </div>
  <div id="author_email_address_div">
    <label for="author_email_address">Email Address</label>
    <%= f.text_field :email_address %>
  </div>
  <div id="author_url_div">
    <label for="author_url">URL</label>
    <%= f.text_field :url %>
  </div>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', authors_path %>
