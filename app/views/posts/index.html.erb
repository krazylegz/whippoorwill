<h1>Listing posts</h1>

<table>
  <tr>
    <td>ID</td>
    <td>Category</td>
    <td>Author</td>
    <td>Title</td>
    <td>Body</td>
    <td>Actions</td>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%= post.id %>
    <td><%= post.category.name %>
    <td><%= post.author.display_name %>
    <td><%= post.title %>
    <td><%= post.body %>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
